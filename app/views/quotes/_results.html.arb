panel 'Resultado da Cotação', class: 'quote-results-panel' do
  attributes_table_for quote do
    if quote.new_record?
      para 'Primeiro você tem que simular uma cotação para ver os resultados!', class: 'simulate-msg'
    else
      row :optimal_markup
      row(:base_price) { |q| q.cost.base_price }
      row(:markup) { |q| q.quote.markup }
      row :fob_net_price
      row(:icms) { |q| q.quote.icsms }
      row(:pis_confins) { |q| q.quote.pis_confins }
      row :final_freight
      row(:unit_price) { |q| q.quote.unit_price }
      row :total_price
      row :mcb
    end
  end
end
panel 'Ultima Venta', class: 'last-sale-panel' do
  attributes_table_for quote.last_sale || Sale.new do
    row :base_price
    row :markup
    row :unit_price
    row :quantity
    row :total_price
    row :sales_date
    row :dist_center
  end
end
